@using Microsoft.AspNetCore.Mvc.Localization;
@inject IHtmlLocalizer<Project.Localization.SharedResources> SharedLocalizer;
<form class="d-flex px-3" role="search" action="@Url.Action("Search", "Search")">
    <div class="input-group">
        <input name="searchTerm" class="form-control" type="search" placeholder="@SharedLocalizer["search"]">
        <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i></button>
    </div>
</form>