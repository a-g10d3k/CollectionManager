@using Microsoft.AspNetCore.Mvc.Localization;
@inject IHtmlLocalizer<Project.Localization.SharedResources> SharedLocalizer;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Collection Manager</title>
    <link rel="stylesheet" href="~/scss/bootstrap.custom.min.css" />
    <link rel="stylesheet" href="~/scss/bootstrap.custom.darkmode.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.14.0/css/selectize.bootstrap5.min.css"/>
    <link href="https://unpkg.com/filepond/dist/filepond.css" rel="stylesheet">
    <link href="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.css" rel="stylesheet"/>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <script src="~/js/darkmode.js"></script>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light box-shadow border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Collection Manager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@SharedLocalizer["home"].Value</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="UserManagement">@SharedLocalizer["admin_panel"]</a>
                            </li>
                        }
                    </ul>
                    <div>
                        <div class="input-group">
                            <input type="radio" class="btn-check" name="darkmode-toggle" id="darkmode-toggle-light" value="false" autocomplete="off" checked>
                            <label class="btn btn-outline-dark" for="darkmode-toggle-light"><i class="bi bi-brightness-high"></i></label>
                            <input type="radio" class="btn-check" name="darkmode-toggle" id="darkmode-toggle-dark" value="true" autocomplete="off">
                            <label class="btn btn-outline-dark" for="darkmode-toggle-dark"><i class="bi bi-moon"></i></label>
                            <script src="~/js/darkmode-toggle.js"></script>
                        </div>
                    </div>
                    <form class="d-flex px-3" role="search" action="@Url.Action("Search", "Search")">
                        <div class="input-group">
                            <input name="searchTerm" class="form-control" type="search" placeholder="@SharedLocalizer["search"]">
                            <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i></button>
                        </div>
                    </form>
                    <ul class="navbar-nav me-auto">
                        @if (User.Identity!.Name != null)
                        {
                                <li class="navbar-text text-secondary">
                                    @SharedLocalizer["logged_in_as"] 
                                    <a href="@Url.Action("GetUser", "Users", new { username = @User.Identity.Name })" >@User.Identity.Name</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Logout">@SharedLocalizer["log_out"]</a>
                                </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">@SharedLocalizer["log_in"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">@SharedLocalizer["register"]</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Ariadna Głodek
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/markdown-it/13.0.1/markdown-it.min.js"></script>
    <script src="~/js/markdown-display.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
