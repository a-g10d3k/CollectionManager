@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;
@model LoginModel
@{
    ViewData["Title"] = @Localizer["page_title"];
}
@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}
<div class="row">
    <div class="col-lg-5">
        <form method="post">
            <div class="mb-1">
            <label asp-for="Username" class="form-label" >@Localizer["username"]:</label>
            <input asp-for="Username" class="form-control" />
            </div>
            <div class="mb-1">
            <label asp-for="Password" class="form-label" >@Localizer["password"]:</label>
            <input asp-for="Password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">@Localizer["log_in"]</button>
        </form>
    </div>
    <div class="col-lg-7">
        @Html.ValidationSummary(false, "", new { @class = "text-danger mt-3" })
    </div>
</div>